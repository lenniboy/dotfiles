[user]
	name = Leonard Ehrenfried

[diff]
    renames=true

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core]
    pager = cat 
    filemode = false
	ignorecase = false

[alias]
    lg = log --graph --no-merges --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative -n40
    preview = commit --dry-run -a --short
    dstat = diff --stat

[branch]
    autosetuprebase = always

[merge]
    tool = mvim

[mergetool "mvim"]
	cmd = mvim -f -d -c \"wincmd J\" \"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
    keepbackup = false
