[user]
    name = Leonard Ehrenfried
    email = leonard.ehrenfried@gmail.com

[diff]
    renames=true

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core]
    editor = vim
    filemode = false
    ignorecase = false
    excludesfile = ~/.cvsignore

[alias]
    stat = status -sb
    author-stats = shortlog -s -n --no-merges
    todo = grep --heading --break --ignore-case -e ' FIX: *' -e ' TODO: *'
    wdiff = diff --word-diff
    preview = commit --dry-run -a --short
    dstat   = diff --stat
    cdiff   = diff --cached
    lg = log --graph --pretty=tformat:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative -n40
    count = rev-list --count HEAD --no-merges
    root = !pwd
    clean-branches = remote prune origin

[branch]
    autosetuprebase = always

[merge]
    tool = mvim

[mergetool "mvim"]
    cmd = mvim -f \"+Gdiff\" $MERGED

[mergetool]
    keepBackup = false

[push]
    default = current

[advice]
    pushNonFastForward = false
[commit]
	gpgsign = true
[gpg]
	program = gpg2
