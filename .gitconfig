[user]
    name = Leonard Ehrenfried

[diff]
    renames=true

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core]
    pager = cat
    editor = /usr/bin/vim
    filemode = false
    ignorecase = false
    excludesfile = ~/.cvsignore

[alias]
    stat = status -sb
    wdiff = diff --word-diff
    preview = commit --dry-run -a --short
    dstat   = diff --stat
    cdiff   = diff --cached
    lg = log --graph --no-merges --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative -n40

[branch]
    autosetuprebase = always

[merge]
    tool = mvim

[mergetool]
    keepBackup = false

[mergetool "mvim"]
    # -f = forground/no fork
    # -d = diff mode
    # -c = command
    cmd = mvim -f -d -c \"wincmd J\" \"$MERGED\" \"$LOCAL\" \"$REMOTE\"

[push]
    default = current

[advice]
    pushNonFastForward = false
