ControlMaster auto
ControlPath ~/.ssh/mux-%r@%h:%p
ControlPersist 2h
ServerAliveInterval 300
ForwardAgent yes
StrictHostKeyChecking no
SendEnv EDITOR
SendEnv NAME
SendEnv EMAIL
SendEnv GIT_AUTHOR_NAME
SendEnv GIT_COMMITTER_NAME
SendEnv COLORSCHEME

Host voyager
  HostName 192.168.1.5
  User admin

